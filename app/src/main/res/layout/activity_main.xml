<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/label_numero"
        android:layout_width="96dp"
        android:layout_height="44dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:hint="@string/number"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inserir"
        android:layout_width="175dp"
        android:layout_height="83dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="96dp"
        android:ems="10"

        android:inputType="number"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/label_numero"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage" />

    <Button
        android:id="@+id/empilhar"
        android:layout_width="490px"
        android:layout_height="150px"
        android:layout_marginTop="328dp"
        android:onClick="insercao"
        android:text="@string/empilhar"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/desempilhar"
        android:layout_width="490px"
        android:layout_height="150px"
        android:layout_marginTop="1dp"
        android:onClick="apagar"
        android:text="@string/desempilhar"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/empilhar"
        tools:ignore="PxUsage"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/adicao"
        android:layout_width="77dp"
        android:layout_height="43dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="250dp"
        android:onClick="somar"
        android:text="@string/plus"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage" />

    <Button
        android:id="@+id/subtracao"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:onClick="subtrair"
        android:text="@string/ifem"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/adicao"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage" />

    <Button
        android:id="@+id/multiplicacao"
        android:layout_width="75dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:onClick="multiplicar"
        android:text="@string/vezes"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/subtracao"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage" />

    <Button
        android:id="@+id/divisao"
        android:layout_width="76dp"
        android:layout_height="44dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="35dp"
        android:onClick="divisao"
        android:text="@string/barra"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/multiplicacao"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="464dp"
        android:text="@string/stack"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="PxUsage"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>